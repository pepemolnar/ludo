// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int      @id @default(autoincrement())
  name   String
  age    Int
  Player Player[]

  @@map("user|user")
}

model Game {
  id     Int    @id @default(autoincrement())
  gameId String
  type   String
  Ludo   Ludo?

  @@map("game|game")
}

model Ludo {
  id        Int      @id @default(autoincrement())
  gameId    Int      @unique
  game      Game     @relation(fields: [gameId], references: [id])
  boardSize Int
  status    String
  Player    Player[]

  @@map("game|ludo")
}

model Player {
  id           Int    @id @default(autoincrement())
  userId       Int
  user         User   @relation(fields: [userId], references: [id])
  ludoId       Int
  ludo         Ludo   @relation(fields: [ludoId], references: [id])
  position     Int
  positionType String

  @@map("ludo|player")
}
